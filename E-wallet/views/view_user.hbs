<section>
  <div class="row justify-content-center">
    <div>
        <a type="button" class="btn btn-outline-primary ms-5" href="javascript: history.go(-1)">Quay lại</a>
      </div>
    <div class="col-xl-5 col-lg-6 col-md-8  mt-3 pt-3 rounded mx-3">
      <div class="card">
        <div class="card-header ">
          <h4 class="mb-0 text-success">Chi tiết người dùng</h4>
        </div>
        <div class="card-body pt-4 p-3">
          <form novalidate class="mt-3">
            <div class="form-group">
              <label class="fw-bold" for="name">Tên tài khoản</label>
              <input class="form-control input-username" type="text" placeholder="Nhập tên người dùng" id="name" name="name"
                value="{{username}}" disabled/>
            </div>

            <div class="form-group">
              <label class="fw-bold" for="email">Email</label>
              <input class="form-control" type="text" placeholder="Email" id="email" name="email" value="{{email}}" disabled/>
            </div>

            <div class="form-group">
              <label class="fw-bold" for="fullname">Tên người dùng</label>
              <input class="form-control input-fullname" type="text" placeholder="Email" id="fullname" name="fullname" value="{{fullname}}" disabled/>
            </div>

            <div class="form-group">
              <label class="fw-bold" for="phone">Số điện thoại</label>
              <input class="form-control" type="text" placeholder="Email" id="phone" name="phone" value="{{phone}}" disabled/>
            </div>

            <div class="form-group">
              <label class="fw-bold" for="birthdate">Ngày sinh</label>
              <input class="form-control" type="text" placeholder="Email" id="birthdate" name="birthdate" value="{{birthday}}" disabled/>
            </div>

            <div class="form-group">
              <label class="fw-bold" for="balance">Số dư tài khoản</label>
              <input class="form-control" type="text" placeholder="Email" id="balance" name="balance" value="{{balance}}" disabled/>
            </div>
            <label class="fw-bold">Ảnh CCCD/CMND</label>
            <div class="card card-profile rounded-lg ">
              <img src="{{cmndfront}}" class="card-img-top rounded-lg" height="330px" width="330px">
              <div class="card-body pt-0">
                <div class="text-center mt-4">
                  <h5>
                    Ảnh mặt trước
                  </h5>
                </div>
              </div>
              <img src="{{cmndback}}" class="card-img-top rounded-lg" height="330px" width="330px">
              <div class="card-body pt-0 ">
                <div class="text-center mt-4">
                  <h5>
                    Ảnh mặt sau
                  </h5>
                </div>
              </div>
            </div>


            <div class="form-group">
              <label class="fw-bold" for="status">Trạng thái</label>
              <input class="form-control" type="text" placeholder="Email" id="status" name="status" value="{{get_status status}}" disabled/>
            </div>

            {{{get_btn status}}}
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-7 col-lg-6 col-md-8  mt-3 pt-3 rounded mx-3">
      <div class="card h-100 mb-4">
        <div class="card-header pb-0 px-3">
          <div class="row">
            <div class="col-md">
              <h4 class="text-center text-success mb-0">Lịch sử giao dịch</h4>
            </div>

          </div>
        </div>
        <div class="card-body pt-4 p-3">
          <ul class="list-group">
            {{#each histories}}
            <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
              <div class="d-flex align-items-center">
                <button
                  class="btn btn-icon-only btn-rounded btn-outline-{{get_class_history typeTransaction}} mb-0 me-3 btn-sm d-flex align-items-center justify-content-center"><i
                    class="bi bi-arrow-down-circle-fill"></i></button>
                <div class="d-flex flex-column">
                  <h6 class="mb-1 text-dark fw-bold">{{typeTransaction}}</h6>
                  <span class="text-xs">{{getDate createdAt}}</span>
                </div>
              </div>
              <div class="d-flex align-items-center">{{get_status_history status}}</div>
              <div class="d-flex align-items-center text-{{get_class_history typeTransaction}} text-gradient text-sm fw-bold">
                {{get_tag typeTransaction}} {{balance}} VND
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>